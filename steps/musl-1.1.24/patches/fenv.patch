 1:	push %edx
-	stmxcsr (%esp)
 	pop %edx
 	and $0x3f,%eax
 	or %eax,%edx
@@ -26,7 +25,6 @@
 	not %ecx
 	and %ecx,%edx
 	push %edx
-	ldmxcsr (%esp)
 	pop %edx
 1:	xor %eax,%eax
 	ret
